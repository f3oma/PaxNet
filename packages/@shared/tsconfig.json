{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "paths": {
      "@shared/*": ["./src/types/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
}